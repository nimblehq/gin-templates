{% if cookiecutter._web_variant == "yes" %}{
  "rules": {},
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  }
}{% endif %}{% if cookiecutter.use_openapi == "yes" %}{
  "extends": [
    "@nimblehq/eslint-config-nimble",
    "plugin:yml/recommended"
  ],
  "globals": {
    "I18n": true
  }
}{% endif %}
